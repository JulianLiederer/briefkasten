[supervisord]
pidfile=/var/run/supervisor/supervisord.pid
user=%(app_user)s
logfile=%(app_home)s/var/supervisord.log

[program:briefkasten]
command=%(app_home)s/bin/pserve %(app_home)s/briefkasten.ini
user=%(app_user)s
autostart=true
autorestart=true
startsecs=5
stdout_logfile=NONE
stderr_logfile=NONE

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[supervisorctl]
serverurl = unix:///tmp/supervisor.sock
